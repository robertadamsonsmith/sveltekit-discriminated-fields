{
	"name": "sveltekit-discriminated-fields",
	"version": "0.1.2",
	"description": "Type-safe discriminated union support for SvelteKit form fields",
	"type": "module",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "svelte-package -i src -o dist",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"test:types": "npm run --prefix test build && svelte-check --tsconfig ./test/tsconfig.json",
		"test": "npm run test:types && playwright test",
		"prepublishOnly": "npm run test && npm run build"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"forms",
		"discriminated-union",
		"typescript"
	],
	"author": "robertadamsonsmith",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/robertadamsonsmith/sveltekit-discriminated-fields"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.27.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.57.0",
		"@sveltejs/package": "^2.0.0",
		"@types/node": "^25.0.3",
		"@typescript-eslint/types": "^8.51.0",
		"playwright": "^1.57.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0"
	}
}
